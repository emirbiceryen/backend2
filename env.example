MONGODB_URI=
JWT_SECRET=
PORT=5000
NODE_ENV=development

# Google OAuth client IDs (comma-separated list or JSON array).
# Example: GOOGLE_CLIENT_IDS=your-ios-id.apps.googleusercontent.com,your-android-id.apps.googleusercontent.com
GOOGLE_CLIENT_IDS=

# Email verification (disabled by default)
# Set to 'true' to enable email verification and notifications
EMAIL_VERIFICATION_ENABLED=false

# Email sender information
# This email will appear as the sender of verification and notification emails
EMAIL_VERIFICATION_FROM=hubiappinfo@gmail.com

# Base URL for email links (optional)
# If not set, backend URL will be used automatically
# For mobile app: Leave empty or use backend URL
# For web app: Use your frontend URL (e.g., https://hubi.app)
# Example: https://backend-production-7063.up.railway.app
EMAIL_VERIFICATION_BASE_URL=

# Email provider: 'smtp' or 'resend'
# Use 'resend' for Resend API (recommended for Railway)
# Use 'smtp' for SMTP servers (Gmail, SendGrid, etc.)
EMAIL_PROVIDER=resend

# Resend API (if EMAIL_PROVIDER=resend)
RESEND_API_KEY=your-resend-api-key-here

# SMTP credentials (required if EMAIL_PROVIDER=smtp)
# Gmail SMTP configuration:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=hubiappinfo@gmail.com
SMTP_PASS=your-app-password-here
SMTP_SECURE=false

# Sentry error tracking (optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Swagger API documentation
# Set to 'true' to enable Swagger UI in production
ENABLE_SWAGGER=false

